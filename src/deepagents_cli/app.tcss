/* Ghost Glass â€” DeepAgents CLI */

Screen {
    layout: vertical;
    layers: base autocomplete modal;
    background: #111111;
    scrollbar-color: #3f3f46;
    scrollbar-color-hover: #71717a;
    scrollbar-color-active: #71717a;
    scrollbar-background: #111111;
    scrollbar-background-hover: #111111;
    scrollbar-background-active: #111111;
    scrollbar-size-vertical: 1;
}

/* Chat area */
#chat {
    height: 1fr;
    padding: 2 3;
    background: #111111;
    scrollbar-color: #111111;
    scrollbar-background: #111111;
}

#chat-spacer {
    height: auto;
}

/* Welcome banner */
#welcome-banner {
    height: auto;
    margin-bottom: 1;
    padding: 2 0;
}

/* Messages area */
#messages {
    height: auto;
}

/* Bottom app container */
#bottom-app-container {
    height: auto;
    margin-top: 1;
    padding: 0 0;
}

/* Input area */
#input-area {
    height: auto;
    min-height: 3;
    max-height: 12;
}

/* Approval Menu */
.approval-menu {
    height: auto;
    margin: 1 0;
    padding: 1 2;
    background: #1c1c1c;
}

.approval-menu .approval-title {
    color: #e4e4e7;
    margin-bottom: 0;
}

.approval-menu .approval-info {
    height: auto;
    color: #71717a;
    margin-bottom: 1;
}

.approval-menu .approval-option {
    height: 1;
    padding: 0 1;
    color: #71717a;
}

.approval-menu .approval-option-selected {
    background: #151515;
    color: #e4e4e7;
    border-left: thick #00AEEF;
}

.approval-menu .approval-help {
    color: #3f3f46;
    margin-top: 0;
    margin-bottom: 0;
}

/* Running agents pill */
#agents-pill {
    dock: bottom;
    height: 1;
    width: auto;
    margin: 0 0 0 1;
    padding: 0 1;
    color: #a1a1aa;
    background: #18181b;
    text-style: dim;
    display: none;
}

#agents-pill.active {
    display: block;
}

#agents-pill.pulse-on {
    color: #d4d4d8;
    text-style: none;
}

/* Status bar */
#status-bar {
    height: 1;
    dock: bottom;
    margin-bottom: 0;
}

/* Tool approval widgets */
.tool-approval-widget {
    height: auto;
}

.approval-file-path {
    color: #e4e4e7;
}

.approval-description {
    color: #71717a;
}

/* Diff styling */
.diff-header {
    height: auto;
    color: #71717a;
}

.diff-removed {
    height: auto;
    color: #f87171;
    padding: 0 1;
}

.diff-added {
    height: auto;
    color: #4ade80;
    padding: 0 1;
}

.diff-range {
    height: auto;
    color: #71717a;
}

.diff-context {
    height: auto;
    color: #3f3f46;
    padding: 0 1;
}

/* Separator */
.approval-menu .approval-separator {
    height: 1;
    color: #3f3f46;
    margin: 0;
}

/* Scrollable tool info */
.approval-menu .tool-info-scroll {
    height: 10;
    margin-top: 0;
}

.approval-menu .tool-info-container {
    height: auto;
}

/* Options container */
.approval-menu .approval-options-container {
    height: auto;
    background: #1c1c1c;
    padding: 0 1;
    margin-top: 0;
}

/* Slash command menu - above input */
#slash-command-menu {
    display: none;
    width: 100%;
    height: auto;
    max-height: 14;
    padding: 0;
    margin: 0 0 0 0;
    background: #18181b;
    border-top: solid #27272a;
    border-bottom: solid #27272a;
    scrollbar-size-vertical: 0;
    overflow-y: auto;
}

#slash-command-menu .slash-command-row {
    height: 1;
    padding: 0 2;
    color: #a1a1aa;
    background: #18181b;
}

#slash-command-menu .slash-command-row.selected {
    color: #e4e4e7;
    background: #27272a;
    text-style: bold;
}

/* Completion popup - clean and spacious */
#completion-popup {
    height: auto;
    max-height: 10;
    width: 1fr;
    margin-left: 5;
    margin-right: 2;
    margin-bottom: 1;
    background: #18181b;
    color: #e4e4e7;
    border: solid #27272a;
    padding: 1 2;
    layer: autocomplete;
}

/* Toast notifications - ghost glass */
Toast {
    background: #18181b;
    color: #a1a1aa;
    border-left: outer #3f3f46;
}

Toast.-information {
    border-left: outer #00AEEF;
}

Toast.-information .toast--title {
    color: #00AEEF;
}

Toast.-warning {
    border-left: outer #fbbf24;
}

Toast.-warning .toast--title {
    color: #fbbf24;
}

Toast.-error {
    border-left: outer #ef4444;
}

Toast.-error .toast--title {
    color: #ef4444;
}

/* Model selector modal - ghost glass */
ModelSelectorScreen {
    align: center middle;
    background: #09090b 85%;
}

#model-selector-panel {
    layer: modal;
    width: 90;
    height: 32;
    background: #18181b;
    border: solid #27272a;
    padding: 1 2;
}

#model-selector-title {
    color: #e4e4e7;
    margin-bottom: 1;
    text-align: center;
    text-style: bold;
}

.model-selector-input {
    dock: top;
    margin-bottom: 1;
    background: #27272a;
    border: solid #3f3f46;
    color: #e4e4e7;
    height: 3;
    padding: 0 1;
}

.model-selector-input:focus {
    border: solid #00AEEF;
}

#model-selector-list {
    height: 1fr;
    scrollbar-color: #3f3f46;
    scrollbar-background: #18181b;
    scrollbar-size-vertical: 1;
    background: #18181b;
    border: none;
}

#model-selector-list:focus {
    border: none;
}

#model-selector-list > .option-list--option-highlighted {
    background: #27272a;
    color: #00AEEF;
    text-style: bold;
}

#model-selector-help {
    dock: bottom;
    color: #52525b;
    margin-top: 1;
    text-align: center;
    height: 1;
}

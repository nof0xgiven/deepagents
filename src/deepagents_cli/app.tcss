/* DeepAgents CLI - terminal-native refreshed interface */

Screen {
    layout: vertical;
    layers: base autocomplete modal;
    background: transparent;
    scrollbar-color: #9aa5b1 38%;
    scrollbar-color-hover: #b4c0cc 62%;
    scrollbar-color-active: #d5dde6 82%;
    scrollbar-background: transparent;
    scrollbar-background-hover: transparent;
    scrollbar-background-active: transparent;
    scrollbar-size-vertical: 0;
}

/* Chat area */
#chat {
    height: 1fr;
    padding: 1 3 0 3;
    background: transparent;
    scrollbar-color: #9aa5b1 38%;
    scrollbar-background: transparent;
    scrollbar-size-vertical: 0;
}

/* Welcome banner */
#welcome-banner {
    height: auto;
    margin-bottom: 1;
    padding: 1 0;
}

/* Messages area */
#messages {
    height: auto;
}

/* Bottom app container */
#bottom-app-container {
    height: auto;
    margin-top: 1;
    padding: 0;
    border-top: solid #b8c4d0 18%;
    background: transparent;
}

/* Input area */
#input-area {
    height: auto;
    min-height: 4;
    max-height: 16;
}

/* Approval menu */
.approval-menu {
    height: auto;
    margin: 1 0;
    padding: 1 2;
    background: transparent;
    border: solid #9fb0c0 38%;
}

.approval-menu .approval-title {
    color: #eef4fb;
    margin-bottom: 0;
}

.approval-menu .approval-info {
    height: auto;
    color: #c3d0dc;
    margin-bottom: 1;
}

.approval-menu .approval-option {
    height: 1;
    padding: 0 1;
    color: #c3d0dc;
}

.approval-menu .approval-option-selected {
    background: #2a3743 48%;
    color: #f4f8fc;
    border-left: thick #33bfff;
}

.approval-menu .approval-help {
    color: #9aa6b2;
    margin-top: 1;
    margin-bottom: 0;
}

/* Running agents pill */
#agents-pill {
    dock: bottom;
    height: 1;
    width: auto;
    margin: 0 0 0 1;
    padding: 0 1;
    color: #d7e4f0;
    background: transparent;
    border-left: solid #33bfff 40%;
    text-style: dim;
    display: none;
}

#agents-pill.active {
    display: block;
}

#agents-pill.pulse-on {
    color: #f4f8fc;
    text-style: none;
}

/* Status bar */
#status-bar {
    height: 1;
    dock: bottom;
    margin-bottom: 0;
    background: transparent;
}

/* Tool approval widgets */
.tool-approval-widget {
    height: auto;
}

.approval-file-path {
    color: #f4f8fc;
}

.approval-description {
    color: #c5d2de;
}

/* Diff styling */
.diff-header {
    height: auto;
    color: #d4e0eb;
}

.diff-removed {
    height: auto;
    color: #ff7a7a;
    padding: 0 1;
}

.diff-added {
    height: auto;
    color: #72d69f;
    padding: 0 1;
}

.diff-range {
    height: auto;
    color: #b4c1ce;
}

.diff-context {
    height: auto;
    color: #9ba8b5;
    padding: 0 1;
}

.approval-menu .approval-separator {
    height: 1;
    color: #8f9ba8;
    margin: 0;
}

.approval-menu .tool-info-scroll {
    height: 10;
    margin-top: 0;
}

.approval-menu .tool-info-container {
    height: auto;
}

.approval-menu .approval-options-container {
    height: auto;
    background: transparent;
    padding: 0 1;
    margin-top: 0;
}

/* Slash command menu - above input */
#slash-command-menu {
    display: none;
    width: 100%;
    height: auto;
    max-height: 12;
    margin: 0 0 1 0;
    padding: 0;
    background: transparent;
    border: solid #aab6c3 42%;
    scrollbar-size-vertical: 1;
    overflow-y: auto;
}

#slash-command-menu .slash-command-row {
    height: 2;
    padding: 0 2;
    color: #c8d4df;
    background: transparent;
}

#slash-command-menu .slash-command-row.selected {
    color: #f4f8fc;
    background: #2c3a47 55%;
    text-style: bold;
}

/* Completion popup */
#completion-popup {
    height: auto;
    max-height: 12;
    width: 1fr;
    margin-left: 5;
    margin-right: 2;
    margin-bottom: 1;
    background: transparent;
    color: #eef4fb;
    border: solid #aab6c3 45%;
    padding: 1 2;
    layer: autocomplete;
}

/* Toast notifications */
Toast {
    background: transparent;
    color: #d6e2ee;
    border-left: outer #7f93a8;
}

Toast.-information {
    border-left: outer #33bfff;
}

Toast.-information .toast--title {
    color: #8cd8ff;
}

Toast.-warning {
    border-left: outer #f2c35c;
}

Toast.-warning .toast--title {
    color: #f4cf7e;
}

Toast.-error {
    border-left: outer #ff6f6f;
}

Toast.-error .toast--title {
    color: #ff9999;
}

/* Model selector modal */
ModelSelectorScreen {
    align: center middle;
    background: transparent;
}

#model-selector-panel {
    layer: modal;
    width: 94;
    height: 34;
    max-height: 90%;
    background: transparent;
    border: solid #aab6c3 52%;
    padding: 1 2;
}

#model-selector-title {
    color: #f4f8fc;
    margin-bottom: 1;
    text-align: center;
    text-style: bold;
}

.model-selector-input {
    dock: top;
    margin-bottom: 1;
    background: transparent;
    border: solid #98a6b5 52%;
    color: #f4f8fc;
    height: 3;
    padding: 0 1;
}

.model-selector-input:focus {
    border: solid #33bfff;
}

#model-selector-list {
    height: 1fr;
    scrollbar-color: #9aa5b1 45%;
    scrollbar-background: transparent;
    scrollbar-size-vertical: 1;
    background: transparent;
    border: none;
}

#model-selector-list:focus {
    border: none;
}

#model-selector-list > .option-list--option-highlighted {
    background: #2d3a46 58%;
    color: #f4f8fc;
    text-style: bold;
}

#model-selector-help {
    dock: bottom;
    color: #a7b3bf;
    margin-top: 1;
    text-align: center;
    height: 1;
}
